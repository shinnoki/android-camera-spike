<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="6dp"
    android:paddingRight="6dp"
    android:paddingTop="6dp" >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#eee"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="4dp" >

                <TextView
                    android:id="@+id/item_title"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/item_description"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="13dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/frame"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:orientation="vertical"
                android:layout_gravity="center_vertical" >

                <Button
                    android:id="@+id/iwaseteButton"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="イワセテ！" />
                
                <TextView
                    android:id="@+id/mode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:text="入力中…"
                    android:visibility="invisible"
                    android:layout_gravity="center_horizontal"
                    android:textColor="#fff"
                    android:paddingLeft="6dp"
                    android:paddingRight="6dp"
                    android:background="#22222222"/>
                
            </LinearLayout>
        </LinearLayout>

        <com.android.volley.toolbox.NetworkImageView
            android:id="@+id/itemImageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <RelativeLayout
            android:id="@+id/rLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:background="#eee"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/flag_box"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:background="#eee"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/flag_like"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@drawable/flag"
                android:paddingLeft="30dp"
                android:text=""
                android:textSize="23dp" />

            <TextView
                android:id="@+id/flag_question"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:background="@drawable/flag"
                android:drawablePadding="5dp"
                android:paddingLeft="30dp"
                android:text=""
                android:textSize="23dp" />

            <TextView
                android:id="@+id/flag_dislike"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:background="@drawable/flag"
                android:drawablePadding="5dp"
                android:paddingLeft="30dp"
                android:text=""
                android:textSize="23dp" />

            <TextView
                android:id="@+id/flag_all"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:background="@drawable/flag"
                android:drawablePadding="5dp"
                android:paddingLeft="30dp"
                android:text=""
                android:textSize="23dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_below="@id/flag_box"
            android:background="#eee"
            android:orientation="horizontal" >

            <ToggleButton
                android:id="@+id/toggle_like"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="#44FFD700"
                android:checked="true"
                android:drawableLeft="@drawable/ic_menu_star"
                android:drawablePadding="5dp"
                android:textOff="非表示"
                android:textOn="表示" />

            <ToggleButton
                android:id="@+id/toggle_question"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="#4400bfff"
                android:checked="true"
                android:drawableLeft="@drawable/ic_menu_help"
                android:textOff="非表示"
                android:textOn="表示" />

            <ToggleButton
                android:id="@+id/toggle_dislike"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="#44ff3399"
                android:checked="true"
                android:drawableLeft="@drawable/ic_menu_start_conversation"
                android:textOff="非表示"
                android:textOn="表示" />

            <ToggleButton
                android:id="@+id/toggle_all"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="#44aaaaaa"
                android:checked="true"
                android:textOff="全て非表示"
                android:textOn="全て表示" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>